<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Section</title>
    <!-- Liên kết tới Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Tùy chỉnh CSS (nếu cần) */
    </style>
  </head>

  <body>
    <div class="container mt-5">
      <h1 class="mb-4">List of Section</h1>
      <a class="btn btn-danger mb-4" href="/logout">logout</a>
      <a href="/section/addForm/" class="btn btn-primary mb-4">Add Section</a>
      <table class="table">
        <thead>
          <tr>
            <th>Section Name</th>
            <th>Description</th>
            <th>Duration</th>
            <th>MainTask</th>
            <th>Course</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (sectionList && sectionList.length> 0) { %> <%
          sectionList.forEach(section=> { %>
          <tr>
            <td><%= section.sectionName %></td>
            <td><%= section.sectionDescription %></td>
            <td><%= section.duration %></td>
            <td><%= section.isMainTask %></td>
            <td><%= section.course?.courseName %></td>
            <td class="d-flex">
              <a
                href="/section/detail/<%= section._id %>"
                class="btn btn-primary mr-2"
                >Update</a
              >

              <button
                onclick="confirmDelete('<%= section._id %>')"
                class="btn btn-danger"
              >
                Delete
              </button>
            </td>
          </tr>
          <% }); %> <% } else { %>
          <tr>
            <td colspan="3" class="text-center">No courses available.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script>
      function confirmDelete(sectionId) {
        if (confirm("Are you sure you want to delete this section?")) {
          // If confirmed, redirect to delete route
          window.location.href = "/section/delete/" + sectionId;
        }
      }
    </script>
    <!-- Liên kết tới Bootstrap JavaScript (trước thẻ </body>) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
